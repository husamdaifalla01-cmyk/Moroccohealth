{
  "name": "dawa-ma",
  "version": "0.1.0",
  "private": true,
  "description": "Morocco's first integrated pharmacy delivery platform",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:patient": "turbo run dev --filter=@dawa/patient",
    "dev:pharmacy": "turbo run dev --filter=@dawa/pharmacy",
    "dev:courier": "turbo run dev --filter=@dawa/courier",
    "dev:admin": "turbo run dev --filter=@dawa/admin",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate-types": "pnpm --filter @dawa/supabase generate-types",
    "db:migrate": "supabase db push",
    "db:seed": "supabase db seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
